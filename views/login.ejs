<%- include('partials/header')%>
<section>
  <div class="container">
    <div class="row">
      <h1>Ingresar</h1>
      <form name="user" method="post" action="/login">
        <div class="form-group">
          <label for="email">Correo:</label>
          <input type="email" class="form-control" name="username" id="username">
          <span class="text-danger" id="emailMessage"></span>
        </div>
        <div class="form-group">
          <label for="pwd">Contraseña:</label>
          <input type="password" class="form-control" name="password" id="password">
          <span class="text-danger" id="passMessage"></span>
        </div>
        <input type="submit" class="btn btn-default" onclick="saveUser()">
      </form>
      <%= login_fail %>
      <span>¿No tiene una cuenta aún?</span> <a href="/registrarse">Crear una cuenta</a>
    </div>
  </div>
</section>
<script src="/js/registro.js"></script>
<%- include('partials/footer')%>
